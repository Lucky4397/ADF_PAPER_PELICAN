{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "PAPER-PALICAN-ADF"
		},
		"PAPER_PELICAN_BLOB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'PAPER_PELICAN_BLOB'"
		},
		"NASA_ASTERIOD_NEOBS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://api.nasa.gov/neo/rest/v1/feed"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/NASA_ASTERIOD_NEOBS')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "HttpServer",
				"typeProperties": {
					"url": "[parameters('NASA_ASTERIOD_NEOBS_properties_typeProperties_url')]",
					"enableServerCertificateValidation": true,
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/PAPER_PELICAN_BLOB')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('PAPER_PELICAN_BLOB_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/WEEKLY_SUN')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Stopped",
				"pipelines": [],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Week",
						"interval": 1,
						"startTime": "2025-03-16T23:21:00",
						"timeZone": "Eastern Standard Time",
						"schedule": {
							"minutes": [
								0
							],
							"hours": [
								0
							],
							"weekDays": [
								"Sunday"
							]
						}
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/NASA')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "NASA_ASTERIOD_NEOBS",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"STDT": {
						"type": "string"
					},
					"ENDT": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "HttpServerLocation",
						"relativeUrl": {
							"value": "?Start_date=dataset().STDT&End_date=dataset().ENDT&api_key=DEMO_KEY",
							"type": "Expression"
						}
					}
				},
				"schema": {}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/NASA_ASTERIOD_NEOBS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/NASA_BLOB')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "PAPER_PELICAN_BLOB",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"STDT": {
						"type": "string"
					},
					"ENDT": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": {
							"value": "@concat(dataset().STDT,'-',dataset().ENDT)",
							"type": "Expression"
						},
						"container": "nasa"
					},
					"encodingName": "UTF-8"
				},
				"schema": {}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/PAPER_PELICAN_BLOB')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/NASA_ASTERIODS_NEOBS')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "COPY_NASA_BLOB",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "JsonSource",
								"storeSettings": {
									"type": "HttpReadSettings",
									"requestMethod": "GET"
								},
								"formatSettings": {
									"type": "JsonReadSettings"
								}
							},
							"sink": {
								"type": "JsonSink",
								"storeSettings": {
									"type": "AzureBlobStorageWriteSettings",
									"copyBehavior": "PreserveHierarchy"
								},
								"formatSettings": {
									"type": "JsonWriteSettings"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "NASA",
								"type": "DatasetReference",
								"parameters": {
									"STDT": {
										"value": "@formatDateTime(addDays(utcNow(), -7), 'yyyy-MM-dd')",
										"type": "Expression"
									},
									"ENDT": {
										"value": "@formatDateTime(addDays(utcNow(), -1), 'yyyy-MM-dd')",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "NASA_BLOB",
								"type": "DatasetReference",
								"parameters": {
									"STDT": {
										"value": "@formatDateTime(addDays(utcNow(), -7), 'yyyy-MM-dd')",
										"type": "Expression"
									},
									"ENDT": {
										"value": "@formatDateTime(addDays(utcNow(), -1), 'yyyy-MM-dd')",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": [],
				"lastPublishTime": "2025-03-17T02:03:29Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/NASA')]",
				"[concat(variables('factoryId'), '/datasets/NASA_BLOB')]"
			]
		}
	]
}